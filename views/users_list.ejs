<script>
   document.addEventListener("click", function (event) {
        if (!event.target.classList.contains("logout")) return;
        event.stopPropagation();

        Swal.fire({
            title: "Are you sure?",
            text: "You will be logged out!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, logout!"
        }).then((result) => {
            if (!result.isConfirmed) return;

            Swal.fire({ title: "Logging out...", allowOutsideClick: false, showConfirmButton: false, didOpen: () => Swal.showLoading() });

            fetch("/users/logout", { method: "POST", headers: { "Content-Type": "application/json" } })
                .then((response) => {
                    if (!response.ok) throw new Error("Logout failed");
                    return response.json();
                })
                .then(() => {
                    Swal.fire("Logged out!", "You have been logged out successfully.", "success")
                        .then(() => (window.location.href = "/users/login"));
                })
                .catch((error) => {
                    console.error("Logout Error:", error);
                    Swal.fire("Error!", "An error occurred during logout.", "error");
                });
        });
    });



document.addEventListener("click", function (event) {
  if (event.target.classList.contains("delete")) {
    let id = event.target.dataset.id;

    Swal.fire({
      title: "Are you sure?",
      text: "This action cannot be undone!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        fetch("/users/userdelete", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ id: id }),
        })
          .then((response) => response.json())
          .then((data) => {
            Swal.fire({
              title: "Deleted!",
              text: data.message,
              icon: "success",
              allowOutsideClick: false, // Prevents closing without clicking OK
            }).then(() => {
              window.location.reload(true) ;// Redirect to another page
            });
          })
          .catch((error) => {
            Swal.fire("Error!", "An error occurred", "error");
          });
      }
    });
  }
});


