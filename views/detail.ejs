<script>

    document.addEventListener("click", function (event) {
        if (!event.target.classList.contains("logout")) return;
        event.stopPropagation();

        Swal.fire({
            title: "Are you sure?",
            text: "You will be logged out!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, logout!"
        }).then((result) => {
            if (!result.isConfirmed) return;

            Swal.fire({ title: "Logging out...", allowOutsideClick: false, showConfirmButton: false, didOpen: () => Swal.showLoading() });

            fetch("/users/logout", { method: "POST", headers: { "Content-Type": "application/json" } })
                .then((response) => {
                    if (!response.ok) throw new Error("Logout failed");
                    return response.json();
                })
                .then(() => {
                    Swal.fire("Logged out!", "You have been logged out successfully.", "success")
                        .then(() => (window.location.href = "/users/login"));
                })
                .catch((error) => {
                    console.error("Logout Error:", error);
                    Swal.fire("Error!", "An error occurred during logout.", "error");
                });
        });
    });



    document.addEventListener("click", function (event) {
        if (event.target.classList.contains("btn")) {
            const id = event.target.dataset.id;
            console.log("Update button clicked - ID:", id);

            if (!id) {
                console.error("Error: No ID found on button.");
                Swal.fire({ icon: "error", text: "Invalid item ID." });
                return;
            }

            // Gather form data
            const formData = {};
            document.querySelectorAll("input").forEach(input => {
                formData[input.name] = input.value;
            });
            formData.id = id;

            console.log("Data being sent:", formData); // Debugging

            Swal.fire({
                title: "Do you want to update?",
                showCancelButton: true,
                confirmButtonText: "Update",
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch("/users/update", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(formData)
                    })
                        .then(response => response.json())
                        .then(data => {
                            console.log("Server Response:", data);
                            if (data.status === "unauthorized") {
                                window.location.href = "/users/login";
                            } else if (data.status === "success") {
                                Swal.fire({
                                    icon: "success",
                                    text: data.message,
                                    confirmButtonText: "OK",
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/users/tables";
                                    }
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "Oops...",
                                    text: data.message,
                                });
                            }
                        })
                        .catch(error => {
                            console.error("Fetch Error:", error);
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: "Something went wrong. Please try again later.",
                            });
                        });
                }
            });
        }
    });




    document.addEventListener("DOMContentLoaded", function () {
    const emailBtn = document.querySelector("#emailbtn");
    const quillEditor = new Quill("#editor", { theme: "snow" });

    if (emailBtn) {
        emailBtn.addEventListener("click", function (e) {
            e.preventDefault();

            Swal.fire({
                title: "Are you sure?",
                text: "This action cannot be undone!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Send",
                cancelButtonText: "Cancel"
            }).then(async (result) => {
                if (result.isConfirmed) {
                    // Collect form data
                    const formData = {
                        ftoemail: document.querySelector("input[name='ftoemail']")?.value.trim() || "",
                        fccemail: document.querySelector("input[name='fccemail']")?.value.trim() || "",
                        fsubject: document.querySelector("input[name='fsubject']")?.value.trim() || "",
                        ftextarea: quillEditor.root.innerHTML.trim() || "" // Fetching Quill's HTML content
                    };

                    // Validate required fields
                    if (!formData.ftoemail || !formData.fsubject || !formData.ftextarea) {
                        Swal.fire({
                            icon: "warning",
                            text: "Please fill in all required fields before sending."
                        });
                        return;
                    }

                    try {
                        const response = await fetch("/users/sendEmail", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify(formData)
                        });

                        const data = await response.json();

                        if (response.ok && data.status === "success") {
                            Swal.fire({
                                icon: "success",
                                text: "Email sent successfully!"
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            throw new Error(data.message || "Email sending failed.");
                        }
                    } catch (error) {
                        console.error("Email Error:", error);
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something went wrong. Please try again later."
                        });
                    }
                }
            });
        });
    }
});


